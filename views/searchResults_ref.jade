            $(function() {
                $(".part-header").click(function(e) {
                    e.preventDefault();
                    var target = $(e.currentTarget);
                    var part = target.parents("tr").data("part");
                    var extended = $("tr.partExtended." + part);
                    var icon = target.find(".resultIcon");
                    if (extended.css("display") == "none") {
                        extended.show();
                        icon.toggleClass("icon-right-open").toggleClass("icon-down-open");
                    }
                    else {
                        extended.hide();
                        icon.toggleClass("icon-right-open").toggleClass("icon-down-open");
                    }
                });
            });
